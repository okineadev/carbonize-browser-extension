{
  "manifest_version": 3,
  "name": "Carbonize Code",
  "version": "0.0.1",
  "description": "Create Carbon screenshots of selected code",
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "background": {
    "service_worker": "carbon.js"
  },
  "author": "Okinea Dev",
  "action": {
    "default_icon": {
      "16": "images/image-16.png",
      "32": "images/image-32.png",
      "48": "images/image-48.png",
      "128": "images/image-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "images/image-16.png",
    "32": "images/image-32.png",
    "48": "images/image-48.png",
    "128": "images/image-128.png"
  }
}
